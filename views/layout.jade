    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css', integrity='sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ==', crossorigin='anonymous')
    link(href='stylesheets/chat.css', rel='stylesheet')
  body(onload="myFunction()")
    .container
      #myModal.modal.fade(role='dialog')
        .modal-dialog
          // Modal content
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal') Ã—
              h4
                span.glyphicon.glyphicon-question-sign
                | Hacer pregunta
            .modal-body
              form#surveyForm.form-horizontal
                .form-group
                  label.col-xs-3.control-label Pregunta
                  .col-xs-5
                    input(id='pregunta', name='pregunta', data-validation='length', data-validation-length='min10')
                .form-group
                  label.col-xs-3.control-label Respuestas
                  .col-xs-5
                    input(type='text', name='respuestas[]', data-validation='length', data-validation-length='min2', class='respuestasC')
                  .col-xs-4
                    button.btn.btn-default.addButton(type='button')
                      span.glyphicon.glyphicon-plus
                // The option field template containing an option field and a Remove button
                #optionTemplate.form-group.hide
                  .col-xs-offset-3.col-xs-5
                    input(type='text', name='respuestas[]', data-validation='length', data-validation-length='min2', class='respuestasC')
                  .col-xs-4
                    button.btn.btn-default.removeButton(type='button')
                      span.glyphicon.glyphicon-minus
                script.
                  $.validate();
                .form-group
                  .col-xs-5.col-xs-offset-3
                    button.btn.btn-default.sendQuestion(type='button', onclick="submitForm()") Enviar pregunta
            .modal-footer
              button.btn.btn-danger.btn-default.pull-left(type='submit', data-dismiss='modal')
                span.glyphicon.glyphicon-remove
                |  Cancel
      block content
    block footer
